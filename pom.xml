<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.sonatype.oss</groupId>
        <artifactId>oss-parent</artifactId>
        <version>7</version>
    </parent>

    <groupId>net.sourceforge.owlapi</groupId>
    <artifactId>owlapi-gwt-parent</artifactId>
    <packaging>pom</packaging>
    <version>3.4.8-SNAPSHOT</version>

    <licenses>
        <license>
            <name>GNU LGPL Version 3.0</name>
            <url>http://www.gnu.org/licenses/lgpl.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git://github.com/matthewhorridge/gwt-owlapi.git</connection>
        <developerConnection>scm:git:git@github.com:matthewhorridge/gwt-owlapi.git</developerConnection>
        <url>https://github.com/matthewhorridge/gwt-owlapi</url>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- Convenience property to set the GWT version -->
        <gwtVersion>2.5.1</gwtVersion>
    </properties>



    <issueManagement>
        <system>github</system>
        <url>https://github.com/matthewhorridge/gwt-owlapi/issues</url>
    </issueManagement>



    <developers>
        <developer>
            <id>matthewhorridge</id>
            <name>Matthew Horridge</name>
            <email>matthew.horridge@stanford.edu</email>
        </developer>
    </developers>

    <modules>
        <module>owlapi-gwt-serialization</module>
        <module>owlapi-gwt-client-side-emul</module>
        <module>owlapi-gwt</module>
        <module>owlapi-gwt-serialization-tests</module>
    </modules>

    <dependencies>
        <!-- We have a global dependency of the gwt-user library as this is needed for both server side and client
        side custom field serializers -->
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <version>${gwtVersion}</version>
        </dependency>

        <dependency>
            <groupId>net.sourceforge.owlapi</groupId>
            <artifactId>owlapi-distribution</artifactId>
            <version>3.4.8</version>
        </dependency>

    </dependencies>



    <distributionManagement>
        <repository>
            <id>gwt-owlapi-github</id>
            <url>https://github.com/matthewhorridge/gwt-owlapi</url>
        </repository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.4.2</version>
                <configuration>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <releaseLabel>owlapi-gwt</releaseLabel>
                    <releaseVersion>${project.version}</releaseVersion>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>